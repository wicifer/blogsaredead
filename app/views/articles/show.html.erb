<h2 class="text-center mt-4 text-white"><%=@article.title%></h2>

<div class="container">
<div class="row justify-content-md-center">
    <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
        <img class="card-img-top" src="..." alt="">
        <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <%= link_to 'Edit', edit_article_path(@article), method: :get, class: "btn btn-outline-primary" %>
            <%= link_to 'Delete', article_path(@article), method: :delete, onclick: "return confirm('Are you sure?')", class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
            <small>
            By <%= @article.user.username if @article.user %>.
            Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago.
            </small>
        </div>
        </div>
    </div>
</div>
</div>

<div class="row justify-content-md-center">
    <%= button_to 'Create new article', new_article_path, method: :get, class: "btn btn-outline-light btn-lg" %>
</div> 