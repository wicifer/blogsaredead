<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-7 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <img class="card-img-top" src="..." alt="">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-dark" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'Show', article_path(article), method: :get, class: "btn btn-outline-primary"%>
            <%= link_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-outline-primary" %>
            <%= link_to 'Delete', article_path(article), method: :delete, onclick: "return confirm('Are you sure?')", class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>
         
              By <%= link_to article.user.username,user_path(article.user), class:"text-dark" %>.
              Created <%= time_ago_in_words(article.created_at) %> ago,
              edited <%= time_ago_in_words(article.updated_at) %> ago.
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
