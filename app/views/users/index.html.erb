<h1 class="text-center mt-4 text-white"> Users </h1>

<div class="apple_pagination">
  <%= will_paginate @users , :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <img class="card-img-top" src="..." alt="">
          <div class="card-body">
            <h2 class="card-image"><%= link_to gravatar_for(user, size: 150) %></h2>
            <h3 class="card-title"><%= link_to user.username, user, class: "text-dark" %></h3>
            <h4 class="card-text"><%= pluralize(user.articles.count, "article")%></h4>
            
            <%= link_to 'View profile', user, method: :get, class: "btn btn-outline-primary"%>
            <%= link_to 'Edit profile', edit_user_path(user), method: :get, class: "btn btn-outline-primary" %>
    
          </div>
          <div class="card-footer text-muted">
            <small>
              Joined <%= time_ago_in_words(user.created_at) %> ago.
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="apple_pagination">
  <%= will_paginate @users , :container => false %>
</div>